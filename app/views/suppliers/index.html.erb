<h1>Fornecedores</h1>

<%= link_to 'Novo Fornecedor', new_supplier_path%>

<% if @suppliers.any?%>
  <table>
    <thead>
      <tr>
        <th>Nome</th>
        <th>Localização</th>
      </tr>
    </thead>
    <tbody>
      <% @suppliers.each do |supplier|%>
      <tr>
        <td><%= link_to supplier.brand_name, supplier %></td>
        <td><%= supplier.city%> - <%= supplier.state%> </td>
      </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>Nenhum fornecedor cadastrado</p>
<% end %>

